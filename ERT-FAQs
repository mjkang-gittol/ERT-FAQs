<script>
    // 1. 카테고리 필터링 기능
    function filterCategory(groupId) {
        const groups = document.querySelectorAll('.faq-group');
        const navItems = document.querySelectorAll('nav li');

        // 사이드바 활성화 표시
        navItems.forEach(item => item.classList.remove('active'));
        event.target.classList.add('active');

        // 콘텐츠 필터링
        groups.forEach(group => {
            if (groupId === 'all' || group.getAttribute('data-group') === groupId) {
                group.style.display = 'block';
            } else {
                group.style.display = 'none';
            }
        });
    }

    // 2. 검색 기능
    const searchInput = document.getElementById('searchInput');
    const faqItems = document.querySelectorAll('.faq-item');
    const noResult = document.getElementById('noResult');

    searchInput.addEventListener('input', (e) => {
        const term = e.target.value.toLowerCase();
        let hasVisibleItem = false;

        faqItems.forEach(item => {
            const text = item.innerText.toLowerCase();
            if (text.includes(term)) {
                item.style.display = 'flex';
                hasVisibleItem = true;
            } else {
                item.style.display = 'none';
            }
        });

        // 그룹 제목 처리 (그룹 내 아이템이 하나도 없으면 제목도 숨김)
        const groups = document.querySelectorAll('.faq-group');
        groups.forEach(group => {
            const itemsInGroup = group.querySelectorAll('.faq-item');
            const visibleItems = Array.from(itemsInGroup).filter(i => i.style.display !== 'none');
            group.style.display = visibleItems.length > 0 ? 'block' : 'none';
        });

        noResult.style.display = hasVisibleItem ? 'none' : 'block';
    });
</script>

